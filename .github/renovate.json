{
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile"],
      "matchStrings": ["ENV CATTLE_K3S_VERSION (?<currentValue>.*?)\\n"],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["k3s-io/k3s"],
      "allowedVersions": "<=v1.25"
    }
  ]
}

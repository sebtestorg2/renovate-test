{
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile"],
      "matchStrings": ["ENV CATTLE_K3S_VERSION (?<currentValue>.*?)\\n"],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["k3s"],
      "allowedVersions": "<1.25.0"
    }
  ]
}
